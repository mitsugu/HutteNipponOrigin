{
  "manifest_version": 2,
  "name": "Weekly Weather Forecast for Japan",
  "version": "1.0.0",

  "description": "日本の都道府県の週間天気予報を表示します。",

  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "button/19.png",
      "38": "button/38.png"
    },
    "default_title":"Hütte Nippon Origin",
    "browser_style":true
  },

  "background": {
    "scripts": ["bgs.js"]
  },

  "permissions": [
    "http://www.jma.go.jp/",
    "https://www.jma.go.jp/",
    "http://www.data.jma.go.jp/",
    "https://www.data.jma.go.jp/",
    "storage",
    "tabs",
    "contextMenus"
  ]
}
